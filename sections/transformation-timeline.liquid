<style>
  .transformation-timeline-section {
    padding: {{ section.settings.padding_top_mobile }}px 0 {{ section.settings.padding_bottom_mobile }}px;
    background: {{ section.settings.background_color }};
    overflow: hidden;
  }

  @media screen and (min-width: 750px) {
    .transformation-timeline-section {
      padding: {{ section.settings.padding_top_tablet }}px 0 {{ section.settings.padding_bottom_tablet }}px;
    }
  }

  @media screen and (min-width: 990px) {
    .transformation-timeline-section {
      padding: {{ section.settings.padding_top_desktop }}px 0 {{ section.settings.padding_bottom_desktop }}px;
    }
  }

  .transformation-timeline__container {
    max-width: {{ section.settings.container_max_width }}px;
    margin: 0 auto;
    padding: 0 {{ section.settings.container_padding_mobile }}px;
  }

  @media screen and (min-width: 750px) {
    .transformation-timeline__container {
      padding: 0 {{ section.settings.container_padding_tablet }}px;
    }
  }

  @media screen and (min-width: 990px) {
    .transformation-timeline__container {
      padding: 0 {{ section.settings.container_padding_desktop }}px;
    }
  }

  /* Header */
  .transformation-timeline__header {
    text-align: center;
    max-width: {{ section.settings.header_max_width }}px;
    margin: 0 auto {{ section.settings.header_margin_bottom_mobile }}px;
  }

  @media screen and (min-width: 750px) {
    .transformation-timeline__header {
      margin-bottom: {{ section.settings.header_margin_bottom_tablet }}px;
    }
  }

  @media screen and (min-width: 990px) {
    .transformation-timeline__header {
      margin-bottom: {{ section.settings.header_margin_bottom_desktop }}px;
    }
  }

  .transformation-timeline__badge {
    font-size: {{ section.settings.badge_size_mobile }}px;
    font-weight: {{ section.settings.badge_font_weight }};
    text-transform: uppercase;
    letter-spacing: {{ section.settings.badge_letter_spacing }}px;
    color: {{ section.settings.badge_color }};
    margin-bottom: {{ section.settings.badge_margin_mobile }}px;
    display: inline-block;
  }

  @media screen and (min-width: 750px) {
    .transformation-timeline__badge {
      font-size: {{ section.settings.badge_size_tablet }}px;
      margin-bottom: {{ section.settings.badge_margin_tablet }}px;
    }
  }

  @media screen and (min-width: 990px) {
    .transformation-timeline__badge {
      font-size: {{ section.settings.badge_size_desktop }}px;
      margin-bottom: {{ section.settings.badge_margin_desktop }}px;
    }
  }

  .transformation-timeline__title {
    font-size: {{ section.settings.title_size_mobile }}px;
    font-weight: {{ section.settings.title_font_weight }};
    color: {{ section.settings.title_color }};
    line-height: {{ section.settings.title_line_height }};
    margin: 0;
  }

  @media screen and (min-width: 750px) {
    .transformation-timeline__title {
      font-size: {{ section.settings.title_size_tablet }}px;
    }
  }

  @media screen and (min-width: 990px) {
    .transformation-timeline__title {
      font-size: {{ section.settings.title_size_desktop }}px;
    }
  }

  /* Timeline */
  .transformation-timeline__track {
    position: relative;
    display: flex;
    gap: {{ section.settings.timeline_gap_mobile }}px;
    align-items: flex-start;
    justify-content: space-between;
  }

  @media screen and (min-width: 750px) {
    .transformation-timeline__track {
      gap: {{ section.settings.timeline_gap_tablet }}px;
    }
  }

  @media screen and (min-width: 990px) {
    .transformation-timeline__track {
      gap: {{ section.settings.timeline_gap_desktop }}px;
    }
  }

  /* Connecting Line */
  .transformation-timeline__track::before {
    content: '';
    position: absolute;
    top: {{ section.settings.line_position_mobile }}px;
    left: {{ section.settings.step_image_size_mobile | divided_by: 2 }}px;
    right: {{ section.settings.step_image_size_mobile | divided_by: 2 }}px;
    height: {{ section.settings.line_height }}px;
    background: {{ section.settings.line_color }};
    opacity: {{ section.settings.line_opacity }};
    z-index: 0;
  }

  @media screen and (min-width: 750px) {
    .transformation-timeline__track::before {
      top: {{ section.settings.line_position_tablet }}px;
      left: {{ section.settings.step_image_size_tablet | divided_by: 2 }}px;
      right: {{ section.settings.step_image_size_tablet | divided_by: 2 }}px;
    }
  }

  @media screen and (min-width: 990px) {
    .transformation-timeline__track::before {
      top: {{ section.settings.line_position_desktop }}px;
      left: {{ section.settings.step_image_size_desktop | divided_by: 2 }}px;
      right: {{ section.settings.step_image_size_desktop | divided_by: 2 }}px;
    }
  }

  /* Timeline Step */
  .transformation-timeline__step {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    position: relative;
    z-index: 1;
    min-width: 0;
  }

  /* Step Image */
  .transformation-timeline__step-image-wrapper {
    width: {{ section.settings.step_image_size_mobile }}px;
    height: {{ section.settings.step_image_size_mobile }}px;
    border-radius: {{ section.settings.image_border_radius }}%;
    background: {{ section.settings.image_background }};
    border: {{ section.settings.image_border_width }}px solid {{ section.settings.image_border_color }};
    padding: {{ section.settings.image_padding }}px;
    margin-bottom: {{ section.settings.image_margin_bottom_mobile }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    flex-shrink: 0;
    box-shadow: 0 {{ section.settings.image_shadow_y }}px {{ section.settings.image_shadow_blur }}px rgba(0, 0, 0, {{ section.settings.image_shadow_opacity }});
  }

  @media screen and (min-width: 750px) {
    .transformation-timeline__step-image-wrapper {
      width: {{ section.settings.step_image_size_tablet }}px;
      height: {{ section.settings.step_image_size_tablet }}px;
      margin-bottom: {{ section.settings.image_margin_bottom_tablet }}px;
    }
  }

  @media screen and (min-width: 990px) {
    .transformation-timeline__step-image-wrapper {
      width: {{ section.settings.step_image_size_desktop }}px;
      height: {{ section.settings.step_image_size_desktop }}px;
      margin-bottom: {{ section.settings.image_margin_bottom_desktop }}px;
    }
  }

  .transformation-timeline__step-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Step Number */
  .transformation-timeline__step-number {
    position: absolute;
    top: {{ section.settings.number_position_top }}px;
    right: {{ section.settings.number_position_right }}px;
    width: {{ section.settings.number_size }}px;
    height: {{ section.settings.number_size }}px;
    border-radius: 50%;
    background: {{ section.settings.number_background }};
    color: {{ section.settings.number_color }};
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: {{ section.settings.number_font_size }}px;
    font-weight: {{ section.settings.number_font_weight }};
    border: {{ section.settings.number_border_width }}px solid {{ section.settings.number_border_color }};
  }

  /* Step Content */
  .transformation-timeline__step-title {
    font-size: {{ section.settings.step_title_size_mobile }}px;
    font-weight: {{ section.settings.step_title_font_weight }};
    color: {{ section.settings.step_title_color }};
    margin: 0 0 {{ section.settings.step_title_margin_mobile }}px;
    line-height: {{ section.settings.step_title_line_height }};
  }

  @media screen and (min-width: 750px) {
    .transformation-timeline__step-title {
      font-size: {{ section.settings.step_title_size_tablet }}px;
      margin-bottom: {{ section.settings.step_title_margin_tablet }}px;
    }
  }

  @media screen and (min-width: 990px) {
    .transformation-timeline__step-title {
      font-size: {{ section.settings.step_title_size_desktop }}px;
      margin-bottom: {{ section.settings.step_title_margin_desktop }}px;
    }
  }

  .transformation-timeline__step-description {
    font-size: {{ section.settings.step_desc_size_mobile }}px;
    color: {{ section.settings.step_desc_color }};
    line-height: {{ section.settings.step_desc_line_height }};
    margin: 0;
  }

  @media screen and (min-width: 750px) {
    .transformation-timeline__step-description {
      font-size: {{ section.settings.step_desc_size_tablet }}px;
    }
  }

  @media screen and (min-width: 990px) {
    .transformation-timeline__step-description {
      font-size: {{ section.settings.step_desc_size_desktop }}px;
    }
  }

  /* Mobile Responsive */
  @media screen and (max-width: 749px) {
    .transformation-timeline__track {
      flex-direction: column;
      align-items: stretch;
    }

    .transformation-timeline__track::before {
      top: {{ section.settings.step_image_size_mobile | divided_by: 2 }}px;
      bottom: {{ section.settings.step_image_size_mobile | divided_by: 2 }}px;
      left: {{ section.settings.step_image_size_mobile | divided_by: 2 }}px;
      right: auto;
      width: {{ section.settings.line_height }}px;
      height: auto;
    }

    .transformation-timeline__step {
      flex-direction: row;
      text-align: left;
      gap: {{ section.settings.mobile_step_gap }}px;
    }

    .transformation-timeline__step-content {
      flex: 1;
    }
  }

  /* Animation */
  .transformation-timeline__step {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.6s ease forwards;
  }

  .transformation-timeline__step:nth-child(1) { animation-delay: 0.1s; }
  .transformation-timeline__step:nth-child(2) { animation-delay: 0.2s; }
  .transformation-timeline__step:nth-child(3) { animation-delay: 0.3s; }
  .transformation-timeline__step:nth-child(4) { animation-delay: 0.4s; }
  .transformation-timeline__step:nth-child(5) { animation-delay: 0.5s; }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<div class="transformation-timeline-section">
  <div class="transformation-timeline__container">
    {%- if section.settings.badge_text != blank or section.settings.title != blank -%}
      <div class="transformation-timeline__header">
        {%- if section.settings.badge_text != blank -%}
          <div class="transformation-timeline__badge">
            {{ section.settings.badge_text }}
          </div>
        {%- endif -%}

        {%- if section.settings.title != blank -%}
          <h2 class="transformation-timeline__title">
            {{ section.settings.title }}
          </h2>
        {%- endif -%}
      </div>
    {%- endif -%}

    {%- if section.blocks.size > 0 -%}
      <div class="transformation-timeline__track">
        {%- for block in section.blocks -%}
          <div class="transformation-timeline__step" {{ block.shopify_attributes }}>
            <div class="transformation-timeline__step-image-wrapper">
              {%- if block.settings.step_image != blank -%}
                <img
                  src="{{ block.settings.step_image | image_url: width: 400 }}"
                  alt="{{ block.settings.step_title }}"
                  class="transformation-timeline__step-image"
                  loading="lazy"
                  width="400"
                  height="400"
                >
              {%- else -%}
                <div style="width: 100%; height: 100%; background: {{ section.settings.line_color }}; opacity: 0.1; border-radius: {{ section.settings.image_border_radius }}%;"></div>
              {%- endif -%}

              {%- if section.settings.show_numbers -%}
                <div class="transformation-timeline__step-number">
                  {{ forloop.index }}
                </div>
              {%- endif -%}
            </div>

            <div class="transformation-timeline__step-content">
              {%- if block.settings.step_title != blank -%}
                <h3 class="transformation-timeline__step-title">
                  {{ block.settings.step_title }}
                </h3>
              {%- endif -%}

              {%- if block.settings.step_description != blank -%}
                <p class="transformation-timeline__step-description">
                  {{ block.settings.step_description }}
                </p>
              {%- endif -%}
            </div>
          </div>
        {%- endfor -%}
      </div>
    {%- endif -%}
  </div>
</div>

