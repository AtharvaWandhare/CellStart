{% comment %}
  Transformation Timeline Section
  Shows stages of body transformation after taking supplement
{% endcomment %}

<style>
  .transformation-timeline-section {
    padding: 40px 0;
    background: {{ section.settings.background_color }};
    min-height: 60vh;
    display: flex;
    align-items: center;
    overflow: visible;
  }

  @media screen and (min-width: 750px) {
    .transformation-timeline-section {
      padding: 60px 0;
    }
  }

  @media screen and (min-width: 990px) {
    .transformation-timeline-section {
      padding: 80px 0;
    }
  }

  .transformation-timeline__container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 20px 15px;
    width: 100%;
  }

  @media screen and (max-width: 749px) {
    .transformation-timeline__container {
      padding: 20px 15px;
      width: 100%;
    }
  }

  @media screen and (min-width: 750px) {
    .transformation-timeline__container {
      padding: 0 40px;
    }
  }

  @media screen and (min-width: 990px) {
    .transformation-timeline__container {
      padding: 0 60px;
    }
  }

  /* Header */
  .transformation-timeline__header {
    text-align: center;
    max-width: 800px;
    margin: 0 auto 30px;
    padding: 0 15px;
  }

  @media screen and (min-width: 750px) {
    .transformation-timeline__header {
      margin-bottom: 30px;
    }
  }

  @media screen and (min-width: 990px) {
    .transformation-timeline__header {
      margin-bottom: 40px;
    }
  }

  .transformation-timeline__badge {
    font-size: 11px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 2px;
    color: {{ section.settings.badge_color }};
    margin-bottom: 12px;
    display: inline-block;
  }

  @media screen and (min-width: 750px) {
    .transformation-timeline__badge {
      font-size: 13px;
      margin-bottom: 16px;
      letter-spacing: 2.5px;
    }
  }

  @media screen and (min-width: 990px) {
    .transformation-timeline__badge {
      font-size: 14px;
      margin-bottom: 20px;
    }
  }

  .transformation-timeline__title {
    font-size: 24px;
    font-weight: 700;
    color: {{ section.settings.title_color }};
    line-height: 1.3;
    margin: 0;
    letter-spacing: -0.3px;
  }

  @media screen and (min-width: 750px) {
    .transformation-timeline__title {
      font-size: 36px;
      letter-spacing: -0.5px;
    }
  }

  @media screen and (min-width: 990px) {
    .transformation-timeline__title {
      font-size: 42px;
      letter-spacing: -0.8px;
    }
  }

  /* Timeline */
  .transformation-timeline__track {
    position: relative;
    display: flex;
    gap: 20px;
    align-items: flex-start;
    justify-content: space-between;
  }

  @media screen and (min-width: 750px) {
    .transformation-timeline__track {
      gap: 30px;
    }
  }

  @media screen and (min-width: 990px) {
    .transformation-timeline__track {
      gap: 40px;
    }
  }

  /* Connecting Line */
  .transformation-timeline__track::before {
    content: '';
    position: absolute;
    top: 90px;
    left: calc(50% / var(--step-count));
    right: calc(50% / var(--step-count));
    height: 3px;
    background: linear-gradient(90deg, 
      {{ section.settings.line_color }} 0%, 
      {{ section.settings.badge_color }} 50%, 
      {{ section.settings.line_color }} 100%
    );
    opacity: 0.15;
    z-index: 0;
    border-radius: 2px;
  }

  @media screen and (min-width: 750px) {
    .transformation-timeline__track::before {
      top: 105px;
    }
  }

  @media screen and (min-width: 990px) {
    .transformation-timeline__track::before {
      top: 120px;
    }
  }

  /* Timeline Step */
  .transformation-timeline__step {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    position: relative;
    z-index: 1;
    min-width: 0;
  }

  /* Step Image */
  .transformation-timeline__step-image-wrapper {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
    border: 4px solid #ffffff;
    padding: 6px;
    margin-bottom: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    flex-shrink: 0;
    box-shadow: 
      0 8px 20px rgba(0, 0, 0, 0.08),
      0 2px 6px rgba(0, 0, 0, 0.04);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
  }

  .transformation-timeline__step-image-wrapper::after {
    content: '';
    position: absolute;
    inset: -6px;
    border-radius: 50%;
    background: linear-gradient(135deg, {{ section.settings.badge_color }}, #6366f1);
    opacity: 0;
    transition: opacity 0.4s ease;
    z-index: -1;
  }

  .transformation-timeline__step:hover .transformation-timeline__step-image-wrapper {
    transform: translateY(-8px) scale(1.05);
    box-shadow: 
      0 20px 40px rgba(0, 0, 0, 0.12),
      0 4px 12px rgba(0, 0, 0, 0.06);
  }

  .transformation-timeline__step:hover .transformation-timeline__step-image-wrapper::after {
    opacity: 1;
  }

  @media screen and (min-width: 750px) {
    .transformation-timeline__step-image-wrapper {
      width: 180px;
      height: 180px;
      margin-bottom: 24px;
      border: 5px solid #ffffff;
    }
  }

  @media screen and (min-width: 990px) {
    .transformation-timeline__step-image-wrapper {
      width: 200px;
      height: 200px;
      margin-bottom: 28px;
      border: 6px solid #ffffff;
    }
  }

  .transformation-timeline__step-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 50%;
  }

  /* Step Content */
  .transformation-timeline__step-title {
    font-size: 16px;
    font-weight: 700;
    color: {{ section.settings.step_title_color }};
    margin: 0 0 8px;
    line-height: 1.4;
    letter-spacing: -0.2px;
  }

  @media screen and (min-width: 750px) {
    .transformation-timeline__step-title {
      font-size: 18px;
      margin-bottom: 10px;
    }
  }

  @media screen and (min-width: 990px) {
    .transformation-timeline__step-title {
      font-size: 20px;
      margin-bottom: 12px;
      letter-spacing: -0.3px;
    }
  }

  .transformation-timeline__step-description {
    font-size: 12px;
    color: {{ section.settings.step_desc_color }};
    line-height: 1.5;
    margin: 0;
    font-weight: 400;
    opacity: 0.85;
  }

  @media screen and (min-width: 750px) {
    .transformation-timeline__step-description {
      font-size: 14px;
      line-height: 1.6;
    }
  }

  @media screen and (min-width: 990px) {
    .transformation-timeline__step-description {
      font-size: 15px;
      line-height: 1.7;
    }
  }

  /* Mobile Carousel */
  @media screen and (max-width: 749px) {
    .transformation-timeline__carousel-wrapper {
      position: relative;
      width: 100%;
      overflow: hidden;
    }

    .transformation-timeline__track {
      display: flex;
      transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      gap: 0;
      padding: 0;
      width: 100%;
    }

    .transformation-timeline__track::before {
      display: none;
    }

    .transformation-timeline__step {
      flex: 0 0 100%;
      min-width: 100%;
      flex-direction: column;
      text-align: center;
      align-items: center;
      padding: 0 50px;
      box-sizing: border-box;
    }

    .transformation-timeline__step-content {
      width: 100%;
      padding: 0 10px;
      box-sizing: border-box;
    }

    /* Carousel Navigation */
    .transformation-timeline__nav {
      position: absolute;
      top: 40%;
      transform: translateY(-50%);
      width: 36px;
      height: 36px;
      background: white;
      border: 2px solid #e5e7eb;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      z-index: 10;
      transition: all 0.3s ease;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .transformation-timeline__nav:active {
      transform: translateY(-50%) scale(0.95);
      background: #f9fafb;
    }

    .transformation-timeline__nav--prev {
      left: 5px;
    }

    .transformation-timeline__nav--next {
      right: 5px;
    }

    .transformation-timeline__nav svg {
      width: 18px;
      height: 18px;
      fill: {{ section.settings.badge_color }};
    }

    .transformation-timeline__nav:disabled {
      opacity: 0.3;
      cursor: not-allowed;
    }

    /* Carousel Dots */
    .transformation-timeline__dots {
      display: flex;
      justify-content: center;
      gap: 8px;
      margin-top: 20px;
    }

    .transformation-timeline__dot {
      width: 8px;
      height: 8px;
      border-radius: 50%;
      background: #e5e7eb;
      border: none;
      cursor: pointer;
      padding: 0;
      transition: all 0.3s ease;
    }

    .transformation-timeline__dot.active {
      background: {{ section.settings.badge_color }};
      width: 24px;
      border-radius: 4px;
    }
  }

  /* Hide carousel controls on desktop */
  @media screen and (min-width: 750px) {
    .transformation-timeline__nav,
    .transformation-timeline__dots {
      display: none;
    }
  }

  /* Animation */
  @media (prefers-reduced-motion: no-preference) {
    .transformation-timeline__step {
      opacity: 0;
      transform: translateY(30px);
      animation: fadeInUp 0.8s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    }

    .transformation-timeline__step:nth-child(1) { animation-delay: 0.1s; }
    .transformation-timeline__step:nth-child(2) { animation-delay: 0.2s; }
    .transformation-timeline__step:nth-child(3) { animation-delay: 0.3s; }
    .transformation-timeline__step:nth-child(4) { animation-delay: 0.4s; }
    .transformation-timeline__step:nth-child(5) { animation-delay: 0.5s; }

    @keyframes fadeInUp {
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
  }
</style>

<transformation-timeline>
  <div class="transformation-timeline-section">
    <div class="transformation-timeline__container">
    {%- if section.settings.badge_text != blank or section.settings.title != blank -%}
      <div class="transformation-timeline__header">
        {%- if section.settings.badge_text != blank -%}
          <div class="transformation-timeline__badge">
            {{ section.settings.badge_text }}
          </div>
        {%- endif -%}

        {%- if section.settings.title != blank -%}
          <h2 class="transformation-timeline__title">
            {{ section.settings.title }}
          </h2>
        {%- endif -%}
      </div>
    {%- endif -%}

    {%- if section.blocks.size > 0 -%}
      <div class="transformation-timeline__carousel-wrapper">
        <button class="transformation-timeline__nav transformation-timeline__nav--prev" aria-label="Previous slide">
          <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path d="M15.41 7.41L14 6l-6 6 6 6 1.41-1.41L10.83 12z"/>
          </svg>
        </button>

        <div class="transformation-timeline__track" style="--step-count: {{ section.blocks.size }};" data-timeline-track>
          {%- for block in section.blocks -%}
            <div class="transformation-timeline__step" {{ block.shopify_attributes }}>
              <div class="transformation-timeline__step-image-wrapper">
                {%- if block.settings.step_image != blank -%}
                  <img
                    src="{{ block.settings.step_image | image_url: width: 500 }}"
                    srcset="{{ block.settings.step_image | image_url: width: 240 }} 240w,
                            {{ block.settings.step_image | image_url: width: 360 }} 360w,
                            {{ block.settings.step_image | image_url: width: 480 }} 480w,
                            {{ block.settings.step_image | image_url: width: 600 }} 600w"
                    sizes="(min-width: 990px) 240px, (min-width: 750px) 210px, 160px"
                    alt="{{ block.settings.step_title | escape }}"
                    class="transformation-timeline__step-image"
                    loading="lazy"
                    width="500"
                    height="500"
                  >
                {%- else -%}
                  <div style="width: 100%; height: 100%; background: linear-gradient(135deg, #e5e7eb 0%, #f3f4f6 100%); border-radius: 50%;"></div>
                {%- endif -%}
              </div>

              <div class="transformation-timeline__step-content">
                {%- if block.settings.step_title != blank -%}
                  <h3 class="transformation-timeline__step-title">
                    {{ block.settings.step_title }}
                  </h3>
                {%- endif -%}

                {%- if block.settings.step_description != blank -%}
                  <div class="transformation-timeline__step-description">
                    {{ block.settings.step_description }}
                  </div>
                {%- endif -%}
              </div>
            </div>
          {%- endfor -%}
        </div>

        <button class="transformation-timeline__nav transformation-timeline__nav--next" aria-label="Next slide">
          <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path d="M10 6L8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6z"/>
          </svg>
        </button>

        <div class="transformation-timeline__dots" data-timeline-dots>
          {%- for block in section.blocks -%}
            <button class="transformation-timeline__dot{% if forloop.first %} active{% endif %}" data-slide="{{ forloop.index0 }}" aria-label="Go to slide {{ forloop.index }}"></button>
          {%- endfor -%}
        </div>
      </div>
    {%- endif -%}
  </div>
</div>
</transformation-timeline>

<script>
  if (!customElements.get('transformation-timeline')) {
    class TransformationTimeline extends HTMLElement {
      constructor() {
        super();
        this.currentSlide = 0;
        this.track = null;
        this.slides = [];
        this.prevButton = null;
        this.nextButton = null;
        this.dots = [];
        this.touchStartX = 0;
        this.touchEndX = 0;
        this.isMobile = false;
      }

      connectedCallback() {
        this.checkMobile();
        if (!this.isMobile) return;
        
        this.track = this.querySelector('[data-timeline-track]');
        this.slides = Array.from(this.querySelectorAll('.transformation-timeline__step'));
        this.prevButton = this.querySelector('.transformation-timeline__nav--prev');
        this.nextButton = this.querySelector('.transformation-timeline__nav--next');
        this.dots = Array.from(this.querySelectorAll('.transformation-timeline__dot'));

        if (!this.track || this.slides.length === 0) return;

        this.setupEventListeners();
        this.updateCarousel();
        
        // Handle resize
        window.addEventListener('resize', () => {
          this.checkMobile();
          if (this.isMobile) {
            this.updateCarousel();
          }
        });
      }

      checkMobile() {
        this.isMobile = window.innerWidth < 750;
      }

      setupEventListeners() {
        // Navigation buttons
        if (this.prevButton) {
          this.prevButton.addEventListener('click', (e) => {
            e.preventDefault();
            this.goToPrevSlide();
          });
        }
        
        if (this.nextButton) {
          this.nextButton.addEventListener('click', (e) => {
            e.preventDefault();
            this.goToNextSlide();
          });
        }

        // Dots
        this.dots.forEach((dot, index) => {
          dot.addEventListener('click', (e) => {
            e.preventDefault();
            this.goToSlide(index);
          });
        });

        // Touch events
        let startX = 0;
        let isDragging = false;

        this.track.addEventListener('touchstart', (e) => {
          startX = e.touches[0].clientX;
          isDragging = true;
        }, { passive: true });

        this.track.addEventListener('touchmove', (e) => {
          if (!isDragging) return;
        }, { passive: true });

        this.track.addEventListener('touchend', (e) => {
          if (!isDragging) return;
          isDragging = false;
          
          const endX = e.changedTouches[0].clientX;
          const diff = startX - endX;
          const threshold = 50;

          if (Math.abs(diff) > threshold) {
            if (diff > 0) {
              this.goToNextSlide();
            } else {
              this.goToPrevSlide();
            }
          }
        }, { passive: true });
      }

      goToSlide(index) {
        if (index < 0 || index >= this.slides.length) return;
        
        this.currentSlide = index;
        this.updateCarousel();
      }

      goToPrevSlide() {
        if (this.currentSlide > 0) {
          this.goToSlide(this.currentSlide - 1);
        }
      }

      goToNextSlide() {
        if (this.currentSlide < this.slides.length - 1) {
          this.goToSlide(this.currentSlide + 1);
        }
      }

      updateCarousel() {
        if (!this.isMobile || !this.track) return;

        // Calculate offset - each slide is 100% width
        const containerWidth = this.track.parentElement.offsetWidth;
        const offset = -(this.currentSlide * containerWidth);
        
        this.track.style.transform = `translateX(${offset}px)`;

        // Update navigation buttons
        if (this.prevButton) {
          this.prevButton.disabled = this.currentSlide === 0;
          this.prevButton.style.opacity = this.currentSlide === 0 ? '0.3' : '1';
        }
        
        if (this.nextButton) {
          this.nextButton.disabled = this.currentSlide === this.slides.length - 1;
          this.nextButton.style.opacity = this.currentSlide === this.slides.length - 1 ? '0.3' : '1';
        }

        // Update dots
        this.dots.forEach((dot, index) => {
          if (index === this.currentSlide) {
            dot.classList.add('active');
          } else {
            dot.classList.remove('active');
          }
        });
      }
    }

    customElements.define('transformation-timeline', TransformationTimeline);
  }
</script>

