  Purpose: Showcase the three key benefits/approaches of the NAD+ formula
  Shows: Numbered cards with hero images, headlines, and benefit descriptions
{% endcomment %}

<style>
    .three-powers-section {
      position: relative;
      {% if section.settings.background_type == 'solid' %}
      /* Prefer the site's darker primary hover variable if available, otherwise fall back to the section setting */
      background: var(--color-primary-hover-custom, {{ section.settings.background_color }});
      {% else %}
      background: linear-gradient({{ section.settings.gradient_direction }}, {{ section.settings.gradient_start_color }}, {{ section.settings.gradient_end_color }});
      {% endif %}
      padding: {{ section.settings.padding_top_mobile }}px 0 {{ section.settings.padding_bottom_mobile }}px;
      overflow: hidden;
    }

    @media screen and (min-width: 750px) {
      .three-powers-section {
        padding: {{ section.settings.padding_top_desktop }}px 0 {{ section.settings.padding_bottom_desktop }}px;
      }
    }

    .three-powers-container {
      max-width: {{ section.settings.container_width_mobile }}px;
      margin: 0 auto;
      padding: 0 20px;
    }

    @media screen and (min-width: 750px) {
      .three-powers-container {
        max-width: {{ section.settings.container_width_desktop }}px;
        scale: 0.85;
      }
    }

    .three-powers-header {
      text-align: center;
      {% comment %} margin-bottom: {{ section.settings.header_margin_bottom_mobile }}px; {% endcomment %}
      /* start hidden for scroll animation */
      opacity: 0;
      transform: translateY(18px);
      transition: opacity 0.9s cubic-bezier(0.2,0.9,0.2,1), transform 0.9s cubic-bezier(0.2,0.9,0.2,1);
    }

    .three-powers-header h2 {
      font-size: {{ section.settings.heading_size_mobile }}px;
      font-weight: {{ section.settings.heading_weight }};
      color: {{ section.settings.heading_color }};
      margin: 0 0 20px 0;
      line-height: 1.2;
      letter-spacing: -0.02em;
    }

    @media screen and (min-width: 750px) {
      .three-powers-header h2 {
        font-size: {{ section.settings.heading_size_desktop }}px;
      }
    }

    .three-powers-header p {
      font-size: {{ section.settings.subheading_size_mobile }}px;
      color: {{ section.settings.subheading_color }};
      max-width: 900px;
      margin: 0 auto;
      line-height: 1;
    }

    @media screen and (min-width: 750px) {
      .three-powers-header p {
        font-size: {{ section.settings.subheading_size_desktop }}px;
      }
    }

    .three-powers-grid {
      display: grid;
      grid-template-columns: 1fr;
      gap: 30px;
      margin-top: {{ section.settings.grid_margin_top_mobile }}px;
    }

    @media screen and (min-width: 750px) {
      .three-powers-grid {
        margin-top: {{ section.settings.grid_margin_top_desktop }}px;
      }
    }

    /* animation helpers for cards */
    /* Animations disabled for power cards so they render instantly */
    .power-card {
      opacity: 1;
      transform: none;
      transition: none;
      will-change: auto;
    }

    /* If other code toggles this class, keep it harmless */
    .power-card.animate-visible {
      opacity: 1;
      transform: none;
    }

    .three-powers-header.animate-visible {
      opacity: 1;
      transform: translateY(0);
    }

    @media screen and (min-width: 750px) {
      .three-powers-grid {
        grid-template-columns: repeat(3, 1fr);
        gap: {{ section.settings.card_gap }}px;
      }
    }

    /* Mobile carousel behavior: convert grid to horizontal scroll with snap */
    @media screen and (max-width: 749px) {
      .three-powers-grid {
        display: flex;
        flex-direction: row;
        gap: 16px;
        overflow-x: auto;
        scroll-snap-type: x mandatory;
        -webkit-overflow-scrolling: touch;
        padding-bottom: 8px; /* give space for controls */
        margin-top: 24px;
      }

      .three-powers-grid::-webkit-scrollbar { display: none; }

      .power-card {
        flex: 0 0 92%; /* show one card at a time with side peeking */
        scroll-snap-align: center;
        width: auto;
        margin: 0 auto;
      }

      /* Carousel controls (mobile) */
      .three-powers-carousel-controls {
        display: flex;
        justify-content: center;
        gap: 12px;
        margin-top: 14px;
      }

      .three-powers-carousel-controls button {
        background: rgba(0,0,0,0.06);
        border: none;
        width: 38px;
        height: 38px;
        border-radius: 999px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
      }

      .three-powers-carousel-controls button:active { transform: scale(0.96); }

      .three-powers-carousel-controls svg { width: 16px; height: 16px; fill: #0b63ce; }
    }

    .power-card {
      position: relative;
      display: flex;
      flex-direction: column;
      {% if section.settings.card_background_type == 'solid' %}
      /* Use the site's primary color (lighter hue) for cards if available, otherwise fall back to the section card setting */
      background: var(--color-primary-custom, {{ section.settings.card_background }});
      {% else %}
      background: linear-gradient({{ section.settings.card_gradient_direction }}, {{ section.settings.card_gradient_start_color }}, {{ section.settings.card_gradient_end_color }});
      {% endif %}
      border-radius: {{ section.settings.card_border_radius }}px;
      overflow: hidden;
      /* subtle resting shadow to lift the card from the background */
      box-shadow: 0 6px 18px rgba(0, 0, 0, 0.12);
      /* Keep a longer entrance for transform + opacity, but keep a snappier shadow change */
      transition: opacity 0.9s cubic-bezier(0.2,0.9,0.2,1), transform 0.9s cubic-bezier(0.2,0.9,0.2,1), box-shadow 0.32s cubic-bezier(.2,.9,.2,1);
    }

    @media (hover: hover) {
      .power-card:hover {
        transform: translateY(-12px);
        /* stronger shadow on hover to simulate hovering */
        box-shadow: 0 28px 60px rgba(0, 0, 0, 0.35);
        z-index: 3;
      }
    }

    .power-card-number {
      position: absolute;
      top: 20px;
      left: 20px;
      font-size: {{ section.settings.number_size_mobile }}px;
      font-weight: 700;
      color: {{ section.settings.number_color }};
      z-index: 2;
      text-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
      line-height: 1;
    }

    @media screen and (min-width: 750px) {
      .power-card-number {
        font-size: {{ section.settings.number_size_desktop }}px;
      }
    }

    .power-card-image {
      position: relative;
      width: 100%;
      height: {{ section.settings.card_image_height_mobile }}px;
      overflow: hidden;
      background: #1a1a1a;
    }

    @media screen and (min-width: 750px) {
      .power-card-image {
        height: {{ section.settings.card_image_height_desktop }}px;
      }
    }

    .power-card-image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      object-position: center;
      display: block;
      transition: transform 0.6s ease;
    }

    @media (hover: hover) {
      .power-card:hover .power-card-image img {
        transform: scale(1.05);
      }
    }

    .power-card-content {
      padding: {{ section.settings.card_padding_vertical_mobile }}px {{ section.settings.card_padding_horizontal_mobile }}px;
      flex-grow: 1;
      display: flex;
      flex-direction: column;
    }

    @media screen and (min-width: 750px) {
      .power-card-content {
        padding: {{ section.settings.card_padding_vertical_desktop }}px {{ section.settings.card_padding_horizontal_desktop }}px;
      }
    }

    .power-card-title {
      font-size: {{ section.settings.card_title_size_mobile }}px;
      font-weight: {{ section.settings.card_title_weight }};
      color: {{ section.settings.card_title_color }};
      margin: 0 0 15px 0;
      line-height: 1.2;
      text-transform: uppercase;
      letter-spacing: 0.03em;
    }

    @media screen and (min-width: 750px) {
      .power-card-title {
        font-size: {{ section.settings.card_title_size_desktop }}px;
      }
    }

    .power-card-description {
      font-size: {{ section.settings.card_description_size_mobile }}px;
      color: {{ section.settings.card_description_color }};
      line-height: 1.6;
      margin: 0 0 25px 0;
    }

    @media screen and (min-width: 750px) {
      .power-card-description {
