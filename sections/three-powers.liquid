<script>
  (function () {
    const root = document.getElementById('three-powers-{{ section.id }}');
    if (!root) return;

    const container = root.querySelector('.three-powers-grid');
    const prevBtn = root.querySelector('.three-powers-prev');
    const nextBtn = root.querySelector('.three-powers-next');

    // Only enable carousel behavior on small screens
    function isMobile() {
      return window.matchMedia('(max-width: 749px)').matches;
    }

    function scrollToCard(index) {
      const cards = Array.from(container.querySelectorAll('.power-card'));
      if (!cards.length) return;
      const card = cards[index];
      if (!card) return;
      const left = card.offsetLeft - (container.clientWidth - card.clientWidth) / 2;
      container.scrollTo({ left, behavior: 'smooth' });
    }

    function getVisibleIndex() {
      const cards = Array.from(container.querySelectorAll('.power-card'));
      const center = container.scrollLeft + container.clientWidth / 2;
      let closest = 0;
      let minDist = Infinity;
      cards.forEach((c, i) => {
        const cCenter = c.offsetLeft + c.clientWidth / 2;
        const dist = Math.abs(cCenter - center);
        if (dist < minDist) { minDist = dist; closest = i; }
      });
      return closest;
    }

    let resizeObserver = null;

    function updateButtons() {
      if (!prevBtn || !nextBtn) return;
      const idx = getVisibleIndex();
      const total = container.querySelectorAll('.power-card').length;
      prevBtn.disabled = idx === 0;
      nextBtn.disabled = idx === total - 1;
    }

    function attach() {
      if (!isMobile()) {
        // ensure horizontal scroll removed if desktop
        container.style.overflowX = '';
        return;
      }

      // show buttons
      if (prevBtn) prevBtn.style.display = '';
      if (nextBtn) nextBtn.style.display = '';

      // wire buttons
      if (prevBtn) prevBtn.addEventListener('click', () => {
        const idx = getVisibleIndex();
        scrollToCard(Math.max(0, idx - 1));
      });
      if (nextBtn) nextBtn.addEventListener('click', () => {
        const idx = getVisibleIndex();
        const total = container.querySelectorAll('.power-card').length;
        scrollToCard(Math.min(total - 1, idx + 1));
      });

      // update buttons after scroll
      let scrollerTimeout = null;
      container.addEventListener('scroll', () => {
        if (scrollerTimeout) clearTimeout(scrollerTimeout);
        scrollerTimeout = setTimeout(() => { updateButtons(); }, 100);
      }, { passive: true });

      // basic swipe support (for some non-native scroll situations)
      let startX = 0;
      let isDown = false;
      container.addEventListener('pointerdown', (e) => { isDown = true; startX = e.clientX; }, { passive: true });
      container.addEventListener('pointerup', (e) => {
        if (!isDown) return; isDown = false; const dx = e.clientX - startX; if (Math.abs(dx) > 30) {
          if (dx < 0) { const idx = getVisibleIndex(); const total = container.querySelectorAll('.power-card').length; scrollToCard(Math.min(total - 1, idx + 1)); }
          else { const idx = getVisibleIndex(); scrollToCard(Math.max(0, idx - 1)); }
        }
      });

      updateButtons();

      // observe resize to recalc
      resizeObserver = new ResizeObserver(() => { updateButtons(); });
      resizeObserver.observe(container);
    }

    // attach on load and on resize
    function init() { if (isMobile()) attach(); else { if (prevBtn) prevBtn.style.display = 'none'; if (nextBtn) nextBtn.style.display = 'none'; } }
    init();
    window.addEventListener('resize', init);
  })();
</script>

<script>
  // Scroll-triggered animations (works on mobile and desktop)
  (function () {
    const root = document.getElementById('three-powers-{{ section.id }}');
    if (!root) return;

    const header = root.querySelector('[data-animate="header"]');
    const cards = Array.from(root.querySelectorAll('.power-card'));

    const observerOptions = { threshold: 0.15 };

    // Observe header
    if (header) {
      const hObserver = new IntersectionObserver((entries, obs) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('animate-visible');
            obs.unobserve(entry.target);
          }
        });
      }, observerOptions);
      hObserver.observe(header);
    }

    // Card reveal disabled: make cards visible immediately (no scroll animation)
    // This removes the staggered loading/appear effect so the cards render instantly.
    cards.forEach(card => {
      card.classList.add('animate-visible');
    });
  })();
</script>

