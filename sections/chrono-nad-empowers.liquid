{% comment %}
  ChronoNAD+ Empowers Section
  - Two-column layout with text and media (image/video)
  - Fully customizable via theme editor
{% endcomment %}

{%- liquid
  assign section_bg = 'var(--color-background)'
  assign heading_color = 'var(--color-heading)'
  assign text_color = 'var(--color-text)'

  if section.settings.use_custom_colors
    assign section_bg = section.settings.custom_background_color
    assign heading_color = section.settings.custom_heading_color
    assign text_color = section.settings.custom_text_color
  endif
-%}

<style>
  .chrono-nad-empowers-section {
    background: {{ section_bg }};
    padding: {{ section.settings.padding_top_mobile }}px 0 {{ section.settings.padding_bottom_mobile }}px;
    color: {{ text_color }};
  }

  @media screen and (min-width: 750px) {
    .chrono-nad-empowers-section {
      padding: {{ section.settings.padding_top_tablet }}px 0 {{ section.settings.padding_bottom_tablet }}px;
    }
  }

  @media screen and (min-width: 990px) {
    .chrono-nad-empowers-section {
      padding: {{ section.settings.padding_top_desktop }}px 0 {{ section.settings.padding_bottom_desktop }}px;
    }
  }

  .chrono-nad-empowers__container {
    max-width: {{ section.settings.container_max_width }}px;
    margin: 0 auto;
    padding: 0 {{ section.settings.container_padding_right_mobile }}px 0 {{ section.settings.container_padding_left_mobile }}px;
    display: flex;
    flex-direction: column;
    gap: {{ section.settings.column_gap_mobile }}px;
  }

  @media screen and (min-width: 750px) {
    .chrono-nad-empowers__container {
      padding: 0 {{ section.settings.container_padding_right_tablet }}px 0 {{ section.settings.container_padding_left_tablet }}px;
      gap: {{ section.settings.column_gap_tablet }}px;
    }
  }

  @media screen and (min-width: 990px) {
    .chrono-nad-empowers__container {
      padding: 0 {{ section.settings.container_padding_right_desktop }}px 0 {{ section.settings.container_padding_left_desktop }}px;
      flex-direction: row;
      justify-content: space-between;
      align-items: {{ section.settings.column_alignment }};
      gap: {{ section.settings.column_gap_desktop }}px;
    }
  }

  .chrono-nad-empowers__text-column {
    padding: {{ section.settings.text_col_padding_top_mobile }}px {{ section.settings.text_col_padding_right_mobile }}px {{ section.settings.text_col_padding_bottom_mobile }}px {{ section.settings.text_col_padding_left_mobile }}px;
  }
  .chrono-nad-empowers__media-column {
    padding: {{ section.settings.media_col_padding_top_mobile }}px {{ section.settings.media_col_padding_right_mobile }}px {{ section.settings.media_col_padding_bottom_mobile }}px {{ section.settings.media_col_padding_left_mobile }}px;
  }

  @media screen and (min-width: 750px) {
    .chrono-nad-empowers__text-column {
      padding: {{ section.settings.text_col_padding_top_tablet }}px {{ section.settings.text_col_padding_right_tablet }}px {{ section.settings.text_col_padding_bottom_tablet }}px {{ section.settings.text_col_padding_left_tablet }}px;
    }
    .chrono-nad-empowers__media-column {
      padding: {{ section.settings.media_col_padding_top_tablet }}px {{ section.settings.media_col_padding_right_tablet }}px {{ section.settings.media_col_padding_bottom_tablet }}px {{ section.settings.media_col_padding_left_tablet }}px;
    }
  }

  @media screen and (min-width: 990px) {
    .chrono-nad-empowers__text-column {
      padding: {{ section.settings.text_col_padding_top_desktop }}px {{ section.settings.text_col_padding_right_desktop }}px {{ section.settings.text_col_padding_bottom_desktop }}px {{ section.settings.text_col_padding_left_desktop }}px;
    }
    .chrono-nad-empowers__media-column {
      padding: {{ section.settings.media_col_padding_top_desktop }}px {{ section.settings.media_col_padding_right_desktop }}px {{ section.settings.media_col_padding_bottom_desktop }}px {{ section.settings.media_col_padding_left_desktop }}px;
    }
  }

  .chrono-nad-empowers__text-column,
  .chrono-nad-empowers__media-column {
    flex: 1;
    min-width: 0;
  }

  /* Text Column */
  .chrono-nad-empowers__heading-1 {
    font-size: {{ section.settings.heading_1_size_mobile }}px;
    font-weight: {{ section.settings.heading_1_weight }};
    line-height: {{ section.settings.heading_1_line_height }};
    color: {{ heading_color }};
    margin: 0 0 {{ section.settings.heading_1_margin_mobile }}px;
  }

  @media screen and (min-width: 750px) {
    .chrono-nad-empowers__heading-1 {
      font-size: {{ section.settings.heading_1_size_tablet }}px;
      margin-bottom: {{ section.settings.heading_1_margin_tablet }}px;
    }
  }

  @media screen and (min-width: 990px) {
    .chrono-nad-empowers__heading-1 {
      font-size: {{ section.settings.heading_1_size_desktop }}px;
      margin-bottom: {{ section.settings.heading_1_margin_desktop }}px;
    }
  }

  .chrono-nad-empowers__paragraph-1 {
