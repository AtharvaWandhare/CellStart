    }
  }

  @media screen and (min-width: 990px) {
    .chrono-nad-empowers__media-wrapper {
      max-width: {{ section.settings.media_max_width_desktop }}px;
    }
  }

  .chrono-nad-empowers__media-wrapper img,
  .chrono-nad-empowers__media-wrapper video {
    display: block;
    width: 100%;
    height: auto;
  }

  .chrono-nad-empowers__source-text {
    font-size: {{ section.settings.source_text_size_mobile }}px;
    color: {{ text_color }};
    opacity: 0.7;
    margin-top: {{ section.settings.source_text_margin_mobile }}px;
    text-align: center;
  }

  @media screen and (min-width: 750px) {
    .chrono-nad-empowers__source-text {
      font-size: {{ section.settings.source_text_size_tablet }}px;
      margin-top: {{ section.settings.source_text_margin_tablet }}px;
    }
  }

  @media screen and (min-width: 990px) {
    .chrono-nad-empowers__source-text {
      font-size: {{ section.settings.source_text_size_desktop }}px;
      margin-top: {{ section.settings.source_text_margin_desktop }}px;
    }
  }
</style>

<div class="chrono-nad-empowers-section">
  <div class="chrono-nad-empowers__container">
    <div class="chrono-nad-empowers__text-column">
      {%- if section.settings.heading_1 != blank -%}
        <h2 class="chrono-nad-empowers__heading-1">{{ section.settings.heading_1 }}</h2>
      {%- endif -%}
      {%- if section.settings.paragraph_1 != blank -%}
        <div class="chrono-nad-empowers__paragraph-1">{{ section.settings.paragraph_1 }}</div>
      {%- endif -%}
      {%- if section.settings.heading_2 != blank -%}
        <h3 class="chrono-nad-empowers__heading-2">{{ section.settings.heading_2 }}</h3>
      {%- endif -%}
      {%- if section.settings.paragraph_2 != blank -%}
        <div class="chrono-nad-empowers__paragraph-2">{{ section.settings.paragraph_2 }}</div>
      {%- endif -%}
    </div>

    <div class="chrono-nad-empowers__media-column">
      <div class="chrono-nad-empowers__media-wrapper">
        {%- if section.settings.media_type == 'image' and section.settings.image != blank -%}
          <img
            src="{{ section.settings.image | image_url: width: 1200 }}"
            alt="{{ section.settings.image.alt | escape }}"
            loading="lazy"
            width="{{ section.settings.image.width }}"
            height="{{ section.settings.image.height }}"
          >
        {%- elsif section.settings.media_type == 'video' and section.settings.video_url.id != blank -%}
          {{ section.settings.video_url | video_tag: autoplay: section.settings.video_autoplay, loop: section.settings.video_loop, controls: false, muted: section.settings.video_autoplay }}
        {%- elsif section.settings.media_type == 'video_file' and section.settings.video_file != blank -%}
          {{ section.settings.video_file | video_tag: autoplay: section.settings.video_autoplay, loop: section.settings.video_loop, controls: true, muted: section.settings.video_autoplay }}
        {%- else -%}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {%- endif -%}
      </div>
      {%- if section.settings.source_text != blank -%}
        <p class="chrono-nad-empowers__source-text">{{ section.settings.source_text }}</p>
      {%- endif -%}
    </div>
  </div>
</div>

