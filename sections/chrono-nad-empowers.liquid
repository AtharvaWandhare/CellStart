    margin: 0 auto;
    border-radius: {{ section.settings.media_border_radius }}px;
    overflow: hidden;
    box-shadow: 0 {{ section.settings.media_shadow_y }}px {{ section.settings.media_shadow_blur }}px rgba(0, 0, 0, {{ section.settings.media_shadow_opacity }});
  }

