{%- if section.settings.slide_height == 'adapt_image' and section.blocks.first.settings.image != blank -%}
  {%- style -%}
    @media screen and (max-width: 749px) {
      #Slider-{{ section.id }}::before,
      #Slider-{{ section.id }} .media::before,
      #Slider-{{ section.id }}:not(.banner--mobile-bottom) .banner__content::before {
        padding-bottom: {{ 1 | divided_by: section.blocks.first.settings.image.aspect_ratio | times: 100 }}%;
        content: '';
        display: block;
      }
    }

    @media screen and (min-width: 750px) {
      #Slider-{{ section.id }}::before,
      #Slider-{{ section.id }} .media::before {
        padding-bottom: {{ 1 | divided_by: section.blocks.first.settings.image.aspect_ratio | times: 100 }}%;
        content: '';
        display: block;
      }
    }
  {%- endstyle -%}
{%- endif -%}

<style>
  /* Customizable slideshow controls (arrows, dots, background, border)
     The controls element is a sibling of the slider div, so we target it
     with adjacent/general sibling selectors to ensure specificity. */
  #Slider-{{ section.id }} + .slideshow__controls,
  #Slider-{{ section.id }} ~ .slideshow__controls,
  .slideshow[data-section-id="{{ section.id }}"] + .slideshow__controls {
    background: {{ section.settings.controls_bg_color | default: '#ffffff' }};
    opacity: {{ section.settings.controls_bg_opacity | default: 1 }};
    border: {{ section.settings.controls_border_width | default: 0 }}px solid {{ section.settings.controls_border_color | default: '#ffffff' }};
    border-radius: 8px;
    padding: 6px 10px;
    display: inline-flex;
    align-items: center;
    gap: 10px;
    justify-content: center;
  }

  /* Arrow buttons color and SVG overrides */
  #Slider-{{ section.id }} + .slideshow__controls .slider-button,
  #Slider-{{ section.id }} ~ .slideshow__controls .slider-button {
    color: {{ section.settings.controls_color | default: '#0057a6' }} !important;
  }

  #Slider-{{ section.id }} + .slideshow__controls .slider-button svg,
  #Slider-{{ section.id }} ~ .slideshow__controls .slider-button svg {
    fill: {{ section.settings.controls_color | default: '#0057a6' }} !important;
    stroke: {{ section.settings.controls_color | default: '#0057a6' }} !important;
  }
  /* Dots appearance â€” target only the inner .dot element so the button remains round
     and links don't get filled. Also add spacing between link elements. */
  #Slider-{{ section.id }} + .slideshow__controls .dot,
  #Slider-{{ section.id }} ~ .slideshow__controls .dot {
    background-color: {{ section.settings.controls_color | default: '#0057a6' }} !important;
    border-color: {{ section.settings.controls_color | default: '#0057a6' }} !important;
    width: 12px !important;
    height: 12px !important;
    border-radius: 50% !important;
    display: block !important;
    box-sizing: border-box !important;
  }

  /* Keep the link/button itself transparent and provide horizontal gap */
  #Slider-{{ section.id }} + .slideshow__controls .slider-counter__link,
  #Slider-{{ section.id }} ~ .slideshow__controls .slider-counter__link {
    margin: 0 6px !important;
    padding: 0 !important;
    background: transparent !important;
    border: none !important;
  }

  /* Active dot state (slightly larger/filled) */
  #Slider-{{ section.id }} + .slideshow__controls .slider-counter__link--active .dot,
  #Slider-{{ section.id }} ~ .slideshow__controls .slider-counter__link--active .dot {
    background-color: {{ section.settings.controls_active_color | default: '#003a6b' }} !important;
    transform: scale(1.15);
  }

  /* Ensure disabled state is visible */
  #Slider-{{ section.id }} + .slideshow__controls .slider-button[disabled],
  #Slider-{{ section.id }} ~ .slideshow__controls .slider-button[disabled],
  #Slider-{{ section.id }} + .slideshow__controls .slider-counter__link[disabled],
  #Slider-{{ section.id }} ~ .slideshow__controls .slider-counter__link[disabled] {
    opacity: 0.35 !important;
    cursor: not-allowed;
  }
</style>

<slideshow-component
  class="slider-mobile-gutter{% if section.settings.layout == 'grid' %} page-width{% endif %}{% if section.settings.show_text_below %} mobile-text-below{% endif %}"
  role="region"
  aria-roledescription="{{ 'sections.slideshow.carousel' | t }}"
  aria-label="{{ section.settings.accessibility_info | escape }}"
>
  <div
    class="slideshow banner banner--{{ section.settings.slide_height }} grid grid--1-col slider slider--everywhere{% if section.settings.show_text_below %} banner--mobile-bottom{% endif %}{% if section.blocks.first.settings.image == blank %} slideshow--placeholder{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}"
    id="Slider-{{ section.id }}"
    aria-live="polite"
    aria-atomic="true"
    data-autoplay="{{ section.settings.auto_rotate }}"
    data-speed="{{ section.settings.change_slides_speed }}"
  >
    {%- for block in section.blocks -%}
      <style>
        #Slide-{{ section.id }}-{{ forloop.index }} .banner__media::after {
          opacity: {{ block.settings.image_overlay_opacity | divided_by: 100.0 }};
        }
        {%- if block.settings.use_gradient_overlay -%}
          #Slide-{{ section.id }}-{{ forloop.index }} .slideshow__text-overlay {
            background: {{ block.settings.gradient_overlay }};
            opacity: 1;
          }
        {%- endif -%}
      </style>
      <div
        class="slideshow__slide grid__item grid--1-col slider__slide"
        id="Slide-{{ section.id }}-{{ forloop.index }}"
        {{ block.shopify_attributes }}
        role="group"
        aria-roledescription="{{ 'sections.slideshow.slide' | t }}"
        aria-label="{{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}"
        tabindex="-1"
      >
        <div class="slideshow__media banner__media media{% if block.settings.image == blank %} placeholder{% endif %}{% if section.settings.image_behavior != 'none' %} animate--{{ section.settings.image_behavior }}{% endif %}">
          {%- if block.settings.use_gradient_overlay -%}
            <div class="slideshow__text-overlay"></div>
          {%- endif -%}
          {%- if block.settings.image -%}
            {%- liquid
              assign desktop = block.settings.image
              assign mobile = block.settings.image_mobile
              assign height = desktop.width | divided_by: desktop.aspect_ratio | round
              if section.settings.image_behavior == 'ambient'
                assign sizes = '120vw'
                assign widths = '450, 660, 900, 1320, 1800, 2136, 2400, 3600, 7680'
              else
                assign sizes = '100vw'
                assign widths = '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
              endif
              assign fetch_priority = 'auto'
              if section.index == 1
                assign fetch_priority = 'high'
              endif
            -%}
            {%- if mobile != blank -%}
              {%- if forloop.first -%}
                <picture>
                  <source media="(max-width: 749px)" srcset="{{ mobile | image_url: width: 1200 }}">
                  {{ desktop | image_url: width: 3840 | image_tag: height: height, sizes: sizes, widths: widths, fetchpriority: fetch_priority }}
                </picture>
              {%- else -%}
                <picture>
                  <source media="(max-width: 749px)" srcset="{{ mobile | image_url: width: 1200 }}">
                  {{ desktop | image_url: width: 3840 | image_tag: loading: 'lazy', height: height, sizes: sizes, widths: widths }}
                </picture>
              {%- endif -%}
            {%- else -%}
              {%- if forloop.first -%}
                {{ desktop | image_url: width: 3840 | image_tag: height: height, sizes: sizes, widths: widths, fetchpriority: fetch_priority }}
              {%- else -%}
                {{ desktop | image_url: width: 3840 | image_tag: loading: 'lazy', height: height, sizes: sizes, widths: widths }}
              {%- endif -%}
            {%- endif -%}
          {%- else -%}
            {%- assign placeholder_slide = forloop.index | modulo: 2 -%}
            {%- if placeholder_slide == 1 -%}
              {{ 'hero-apparel-2' | placeholder_svg_tag: 'placeholder-svg' }}
            {%- else -%}
              {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
            {%- endif -%}
          {%- endif -%}
        </div>
        <div class="slideshow__text-wrapper banner__content banner__content--{{ block.settings.box_align }} page-width{% if block.settings.show_text_box == false %} banner--desktop-transparent{% endif %}{% if settings.animations_reveal_on_scroll and forloop.index == 1 %} scroll-trigger animate--slide-in{% endif %}">
          <div
            class="slideshow__text banner__box content-container content-container--full-width-mobile color-{{ block.settings.color_scheme }} gradient slideshow__text--{{ block.settings.text_alignment }} slideshow__text-mobile--{{ block.settings.text_alignment_mobile }}"
            style="--sep-w-desktop: {{ block.settings.separator_width_desktop | default: 320 }}px; --sep-w-tablet: {{ block.settings.separator_width_tablet | default: 240 }}px; --sep-w-mobile: {{ block.settings.separator_width_mobile | default: 160 }}px; --sep-thickness: {{ block.settings.separator_thickness | default: 1 }}px; --sep-mt-desktop: {{ block.settings.separator_margin_top_desktop | default: 10 }}px; --sep-mt-tablet: {{ block.settings.separator_margin_top_tablet | default: 8 }}px; --sep-mt-mobile: {{ block.settings.separator_margin_top_mobile | default: 6 }}px; --sep-mb-desktop: {{ block.settings.separator_margin_bottom_desktop | default: 16 }}px; --sep-mb-tablet: {{ block.settings.separator_margin_bottom_tablet | default: 14 }}px; --sep-mb-mobile: {{ block.settings.separator_margin_bottom_mobile | default: 12 }}px;"
          >
              {%- if block.settings.heading != blank -%}
                <h2 class="banner__heading inline-richtext {{ block.settings.heading_size }}" style="color: {{ block.settings.heading_color | default: '#ffffff' }}; font-size: {{ block.settings.heading_font_size | default: 48 }}px;">
                  {{ block.settings.heading }}
                </h2>
              {%- endif -%}

            {%- if block.settings.subtitle != blank -%}
              <div class="banner__subtitle" style="color: {{ block.settings.subtitle_color | default: '#ffffff' }}; font-size: {{ block.settings.subtitle_font_size | default: 12 }}px;">{{ block.settings.subtitle }}</div>
            {%- endif -%}

            {%- if block.settings.subheading != blank -%}
              {%- if block.settings.show_separators and block.settings.show_separator_top -%}
                <hr class="banner__sep banner__sep--top" aria-hidden="true">
              {%- endif -%}
              <div class="banner__text rte">
                <p class="banner__subheading" style="color: {{ block.settings.subheading_color | default: '#ffffff' }}; font-size: {{ block.settings.subheading_font_size | default: 16 }}px;">{{ block.settings.subheading }}</p>
              </div>
              {%- if block.settings.show_separators and block.settings.show_separator_bottom -%}
                <hr class="banner__sep banner__sep--bottom" aria-hidden="true">
              {%- endif -%}
            {%- endif -%}
            {%- if block.settings.button_label != blank -%}
              <div class="banner__buttons">
                <a
                  {% if block.settings.link %}
                    href="{{ block.settings.link }}"
                  {% else %}
                    role="link" aria-disabled="true"
                  {% endif %}
                  class="button {% if block.settings.button_style_secondary %}button--secondary{% else %}button--primary{% endif %}"
                >
                  {{- block.settings.button_label | escape -}}
                </a>
              </div>
            {%- endif -%}
          </div>
        </div>
      </div>
    {%- endfor -%}
  </div>

  {%- if section.blocks.size > 1 -%}
    <div class="slideshow__controls slider-buttons{% if section.settings.show_text_below %} slideshow__controls--border-radius-mobile{% endif %}">
      <button
        type="button"
        class="slider-button slider-button--prev"
        name="previous"
        aria-label="{{ 'sections.slideshow.previous_slideshow' | t }}"
        aria-controls="Slider-{{ section.id }}"
      >
        <span class="svg-wrapper">
          {{- 'icon-caret.svg' | inline_asset_content -}}
        </span>
      </button>
      <div class="slider-counter slider-counter--{{ section.settings.slider_visual }}{% if section.settings.slider_visual == 'counter' or section.settings.slider_visual == 'numbers' %} caption{% endif %}">
        {%- if section.settings.slider_visual == 'counter' -%}
          <span class="slider-counter--current">1</span>
          <span aria-hidden="true"> / </span>
          <span class="visually-hidden">{{ 'general.slider.of' | t }}</span>
          <span class="slider-counter--total">{{ section.blocks.size }}</span>
        {%- else -%}
          <div class="slideshow__control-wrapper">
            {%- for block in section.blocks -%}
              <button
                class="slider-counter__link slider-counter__link--{{ section.settings.slider_visual }} link"
                aria-label="{{ 'sections.slideshow.load_slide' | t }} {{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}"
                aria-controls="Slider-{{ section.id }}"
              >
                {%- if section.settings.slider_visual == 'numbers' -%}
                  {{ forloop.index -}}
                {%- else -%}
                  <span class="dot"></span>
                {%- endif -%}
              </button>
            {%- endfor -%}
          </div>
        {%- endif -%}
      </div>
      <button
        type="button"
        class="slider-button slider-button--next"
        name="next"
        aria-label="{{ 'sections.slideshow.next_slideshow' | t }}"
        aria-controls="Slider-{{ section.id }}"
      >
        <span class="svg-wrapper">
          {{- 'icon-caret.svg' | inline_asset_content -}}
        </span>
      </button>
    </div>
  {%- endif -%}
</slideshow-component>

{%- if request.design_mode -%}
  <script src="{{ 'theme-editor.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

