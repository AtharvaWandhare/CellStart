<style>
  /* Customizable variables for quick theming */
  :root {
    --word-reel-accent: #0057a6; /* vibrant coral */
    --word-reel-accent-2: #63acf0ff; /* warm blue */
  }

  .word-reel {
    padding: 2.25rem 1rem;
    overflow: hidden;
    position: relative;
    {% comment %} border-radius: 12px; {% endcomment %}
    /* inner border */
    border-top: 5px double var(--word-reel-border, var(--word-reel-accent-2));
    border-bottom: 5px double var(--word-reel-border, var(--word-reel-accent-2));
    z-index: 0;
  }

  .word-reel__heading {
    text-align: center;
    font-size: 1rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--word-reel-accent);
    margin-bottom: 1.5rem;
  }

  .word-reel__track-container {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .word-reel__track {
    display: flex;
    gap: 3rem;
    animation: scroll-left var(--scroll-speed, 30s) linear infinite;
    width: fit-content;
    align-items: center;
  }

  @media screen and (min-width: 750px) {
    .word-reel__track { gap: 4rem; }
  }

  /* Pause animation on hover */
  .word-reel__track-container:hover .word-reel__track { animation-play-state: paused; }

  .word-reel__item {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    white-space: nowrap;
    transition: transform 0.28s ease;
  }

  .word-reel__item:hover { transform: translateY(-3px); }

  .word-reel__text {
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.06em;
    color: rgba(0,0,0,0.8);
  }

  .word-reel__image {
    max-height: 40px;
    width: auto;
    object-fit: contain;
    /* make images a touch more colorful but still subtle */
    filter: grayscale(40%) saturate(1.05) contrast(1.02);
    opacity: 0.85;
    transition: filter 0.24s ease, opacity 0.24s ease, transform 0.24s ease;
    will-change: filter, opacity, transform;
  }

  @media screen and (min-width: 750px) {
    .word-reel__image { max-height: 50px; }
  }

  .word-reel__item:hover .word-reel__image {
    filter: grayscale(0%) saturate(1.15) contrast(1.03);
    opacity: 1;
    transform: scale(1.03);
  }

  @keyframes scroll-left {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }
</style>

<div class="word-reel" style="--scroll-speed: {{ section.settings.scroll_speed }}s; --word-reel-border: {{ section.settings.border_color }};">
  {%- if section.settings.heading != blank -%}
    <h2 class="word-reel__heading">
      {{ section.settings.heading }}
    </h2>
  {%- endif -%}

  <div class="word-reel__track-container">
    <div class="word-reel__track">
      {%- comment -%} First set of items {%- endcomment -%}
      {%- for block in section.blocks -%}
        <div
          class="word-reel__item"
          {{ block.shopify_attributes }}
          style="font-size: {{ block.settings.text_size }}px; color: {{ block.settings.text_color }};"
        >
          {%- if block.settings.image != blank -%}
            <img
              src="{{ block.settings.image | image_url: width: 200 }}"
              alt="{{ block.settings.text | escape }}"
              class="word-reel__image"
              loading="lazy"
              width="200"
              height="200"
            >
          {%- elsif block.settings.text != blank -%}
            <span class="word-reel__text">{{ block.settings.text }}</span>
          {%- endif -%}
        </div>
      {%- endfor -%}

      {%- comment -%} Duplicate items for seamless loop {%- endcomment -%}
      {%- for block in section.blocks -%}
        <div
          class="word-reel__item"
          style="font-size: {{ block.settings.text_size }}px; color: {{ block.settings.text_color }};"
          aria-hidden="true"
        >
          {%- if block.settings.image != blank -%}
            <img
              src="{{ block.settings.image | image_url: width: 200 }}"
              alt="{{ block.settings.text | escape }}"
              class="word-reel__image"
              loading="lazy"
              width="200"
              height="200"
            >
          {%- elsif block.settings.text != blank -%}
            <span class="word-reel__text">{{ block.settings.text }}</span>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

