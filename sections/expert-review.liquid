<style>
    .expert-image-plus-bg-1 {
      background-image: url('{{ "expert-plus-1.svg" | asset_url }}');
      background-repeat: no-repeat;
      background-position: center;
      background-size: contain;
      position: absolute;
      top: -16%;
      left: -40%;
      width: 100%;
      height: 100%;
      z-index: 0;
      opacity: 0.1;
    }

    .expert-review-section {
      padding: {{ section.settings.padding_top_mobile }}px 0 {{ section.settings.padding_bottom_mobile }}px;
      background-color: {{ section.settings.background_color }};
      position: relative;
      overflow: hidden;
    }

    @media screen and (min-width: 750px) {
      .expert-review-section {
        padding: {{ section.settings.padding_top_desktop }}px 0 {{ section.settings.padding_bottom_desktop }}px;
      }
    }

    .expert-review__container {
      max-width: 100%;
      margin: 0 auto;
      padding: 0 {{ section.settings.container_padding_mobile }}rem;
    }

    @media screen and (min-width: 750px) {
      .expert-review__container {
        padding: 0 {{ section.settings.container_padding_tablet }}rem;
      }
    }

    @media screen and (min-width: 990px) {
      .expert-review__container {
        max-width: {{ section.settings.container_max_width }}px;
        padding: 0 {{ section.settings.container_padding_desktop }}rem;
      }
    }

    /* Section Heading */
    .expert-review__heading {
      font-size: {{ section.settings.heading_size_mobile }}rem;
      font-weight: 600;
      color: {{ section.settings.heading_color }};
      margin-bottom: {{ section.settings.heading_margin_mobile }}rem;
      text-align: left;
      letter-spacing: 0.1em;
      text-transform: uppercase;
      opacity: 0.7;
    }

    @media screen and (min-width: 750px) {
      .expert-review__heading {
        font-size: {{ section.settings.heading_size_tablet }}rem;
        margin-bottom: {{ section.settings.heading_margin_tablet }}rem;
      }
    }

    @media screen and (min-width: 990px) {
      .expert-review__heading {
        font-size: {{ section.settings.heading_size_desktop }}rem !important;
        margin-bottom: {{ section.settings.heading_margin_desktop }}rem;
      }
    }

    /* Grid Layout */
    .expert-review__grid {
      display: grid;
      grid-template-columns: 1fr;
      gap: {{ section.settings.grid_gap_mobile }}rem;
      align-items: flex-start;
    }

    @media screen and (min-width: 990px) {
      .expert-review__grid {
        grid-template-columns: 1fr 1fr;
        gap: {{ section.settings.grid_gap_desktop }}rem;
        align-items: center;
      }
    }

    /* Content Column */
    .expert-review__content {
      order: 1;
      position: relative;
      padding-left: 0;
    }

    @media screen and (min-width: 990px) {
      .expert-review__content {
        padding-left: {{ section.settings.content_padding_left_desktop }}rem;
      }
    }

    /* Decorative vertical line accent */
    .expert-review__content::before {
      content: '';
      position: absolute;
      left: 0;
      top: 0;
      width: {{ section.settings.line_width }}px;
      height: {{ section.settings.line_height_mobile }}px;
      background: linear-gradient(180deg, {{ section.settings.blob_color_2 }} 0%, {{ section.settings.blob_color_1 }} 100%);
      border-radius: 2px;
      display: none; /* Initially hidden, shown on desktop */
    }

    @media screen and (min-width: 750px) {
      .expert-review__content::before {
        height: {{ section.settings.line_height_tablet }}px;
      }
    }

    @media screen and (min-width: 990px) {
      .expert-review__content::before {
        height: {{ section.settings.line_height_desktop }}px;
        display: block;
      }
    }

    .expert-review__grid--image-right .expert-review__content {
      order: 1;
    }

    .expert-review__grid--image-left .expert-review__content {
      order: 2;
    }

    @media screen and (max-width: 989px) {
      .expert-review__content {
        order: 1 !important;
      }
    }

    /* Expert Name - Large and Prominent */
    .expert-review__expert-name {
      font-size: {{ section.settings.name_size_mobile }}rem;
      font-weight: 700;
      color: {{ section.settings.name_color }};
      margin-bottom: {{ section.settings.name_margin_mobile }}rem;
      line-height: 1.2;
      letter-spacing: -0.02em;
    }

    @media screen and (min-width: 750px) {
      .expert-review__expert-name {
        font-size: {{ section.settings.name_size_tablet }}rem;
        margin-bottom: {{ section.settings.name_margin_tablet }}rem;
      }
    }

    @media screen and (min-width: 990px) {
      .expert-review__expert-name {
        font-size: {{ section.settings.name_size_desktop }}rem;
        margin-bottom: {{ section.settings.name_margin_desktop }}rem;
      }
    }

    /* Bio Text - Clean and Readable */
    .expert-review__bio {
      font-size: {{ section.settings.bio_size_mobile }}rem;
      line-height: {{ section.settings.bio_line_height_mobile }};
      color: {{ section.settings.bio_color }};
      margin-bottom: 0;
      font-weight: 400;
      max-width: 100%;
