        {% comment %} left: 50%; {% endcomment %}
      }
    }

    .expert-review__blob svg {
      width: 100%;
      height: 100%;
    }

    /* Circular Image */
    .expert-review__image-wrapper {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      z-index: 2;
      width: {{ section.settings.image_size_mobile }}px;
      height: {{ section.settings.image_size_mobile }}px;
    }

    @media screen and (min-width: 750px) {
      .expert-review__image-wrapper {
        width: {{ section.settings.image_size_tablet }}px;
        height: {{ section.settings.image_size_tablet }}px;
      }
    }

