      width: 100%;
      height: 100%;
      border-radius: 50%;
      object-fit: cover;
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
      border: {{ section.settings.image_border_width_mobile }}px solid {{ section.settings.blob_color_2}};
    }

    @media screen and (min-width: 750px) {
      .expert-review__image {
        border-width: {{ section.settings.image_border_width_desktop }}px;
      }
    }

    /* Fade-in Animation */
    .animate-fade-in {
      opacity: 0;
      transform: translateY(20px);
      transition: opacity 0.8s ease, transform 0.8s ease;
    }

    .animate-fade-in.animate-visible {
      opacity: 1;
      transform: translateY(0);
    }

    .animate-delay-1 {
      transition-delay: 0.2s;
    }

    .animate-delay-2 {
      transition-delay: 0.4s;
    }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const observerOptions = {
      threshold: 0.2,
      rootMargin: '0px 0px -50px 0px',
    };

    const observer = new IntersectionObserver(function (entries) {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add('animate-visible');
        }
      });
    }, observerOptions);

    const animatedElements = document.querySelectorAll('.expert-review-section .animate-fade-in');
    animatedElements.forEach((element) => {
      observer.observe(element);
    });
  });
</script>

{%- liquid
  assign image_position = section.settings.image_position
-%}

<div class="expert-review-section">
  <div class="expert-image-plus-bg-1"></div>
  <div class="expert-review__container">
    <div class="expert-review__grid expert-review__grid--{{ image_position }}">
      {%- comment -%} Content Column {%- endcomment -%}
      <div class="expert-review__content animate-fade-in">
        {%- if section.settings.heading != blank -%}
          <div class="expert-review__heading">
            {{ section.settings.heading }}
          </div>
        {%- endif -%}

        {%- if section.settings.expert_name != blank -%}
          <h2 class="expert-review__expert-name">
            {{ section.settings.expert_name }}
          </h2>
        {%- endif -%}

        {%- if section.settings.bio_text != blank -%}
          <div class="expert-review__bio">
            {{ section.settings.bio_text }}
          </div>
        {%- endif -%}

        {%- comment -%} Legacy quote structure - hidden but kept for compatibility {%- endcomment -%}
        {%- if section.settings.quote_part_1 != blank
          or section.settings.highlight_text != blank
          or section.settings.quote_part_2 != blank
        -%}
          <blockquote class="expert-review__quote">
            {%- if section.settings.quote_part_1 != blank -%}
              {{ section.settings.quote_part_1 }}
            {%- endif -%}
            {%- if section.settings.highlight_text != blank -%}
              <span class="expert-review__quote-highlight">{{ section.settings.highlight_text }}</span>
            {%- endif -%}
            {%- if section.settings.quote_part_2 != blank -%}
              {{ section.settings.quote_part_2 }}
            {%- endif -%}
          </blockquote>
        {%- endif -%}

        {%- comment -%} Legacy info structure - hidden but kept for compatibility {%- endcomment -%}
        <div class="expert-review__info">
          {%- if section.settings.company_logo != blank -%}
            <div class="expert-review__logo">
              {{
                section.settings.company_logo
                | image_url: width: 80
                | image_tag: loading: 'lazy', alt: section.settings.company_name
              }}
            </div>
          {%- endif -%}

          <div class="expert-review__text-wrapper">
            {%- if section.settings.expert_name != blank -%}
              <div class="expert-review__name">
                {{ section.settings.expert_name }}
              </div>
            {%- endif -%}

            {%- if section.settings.expert_title != blank -%}
              <p class="expert-review__title">
                {{ section.settings.expert_title }}
              </p>
            {%- endif -%}

            {%- if section.settings.company_name != blank -%}
              <span class="expert-review__company">
                {{ section.settings.company_name }}
              </span>
            {%- endif -%}
          </div>
        </div>
      </div>

      {%- comment -%} Image Column with Decorative Blob {%- endcomment -%}
      <div class="expert-review__image-column animate-fade-in animate-delay-1">
        <div class="expert-review__blob-wrapper">
          {%- comment -%} Decorative Blob Background {%- endcomment -%}
          <div class="expert-review__blob">
            <svg viewBox="0 0 600 600" xmlns="http://www.w3.org/2000/svg">
              <defs>
                <linearGradient id="blobGradient" x1="0%" y1="0%" x2="100%" y2="100%">
                  <stop offset="0%" style="stop-color:{{ section.settings.blob_color_1 }};stop-opacity:1" />
                  <stop offset="100%" style="stop-color:{{ section.settings.blob_color_2 }};stop-opacity:1" />
                </linearGradient>
              </defs>
              <circle cx="300" cy="300" r="250" fill="url(#blobGradient)" />
            </svg>
          </div>

          {%- comment -%} Circular Expert Image {%- endcomment -%}
          <div class="expert-review__image-wrapper">
            {%- if section.settings.expert_image != blank -%}
              {{
                section.settings.expert_image
                | image_url: width: 900
                | image_tag:
                  loading: 'lazy',
                  class: 'expert-review__image',
                  widths: '400, 600, 800, 900',
                  sizes: '(min-width: 990px) 450px, (min-width: 750px) 380px, 300px'
              }}
            {%- else -%}
              <div
                class="expert-review__image"
                style="background: linear-gradient(135deg, #e5e7eb 0%, #d1d5db 100%);"
              ></div>
            {%- endif -%}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

