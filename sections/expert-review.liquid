      .expert-review__blob-wrapper {
        max-width: {{ section.settings.blob_max_width_desktop }}px;
        height: {{ section.settings.blob_height_desktop }}px;
      }
    }

  .expert-review__blob {
      position: absolute;
      width: 100%;
      height: 100%;
      top: 50%;
      left: 52%;
      transform: translate(-50%, -50%);
      z-index: 1;
      pointer-events: none;
      display: none;
  }

  @media screen and (min-width: 750px) {
      .expert-review__blob {
