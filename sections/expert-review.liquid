      position: relative;
      order: 2;
    }

    .expert-review__grid--image-right .expert-review__image-column {
      order: 2;
    }

    .expert-review__grid--image-left .expert-review__image-column {
      order: 1;
    }

    @media screen and (max-width: 989px) {
      .expert-review__image-column {
        order: 2 !important;
      }
    }

    /* Decorative Blob Background */
    .expert-review__blob-wrapper {
      position: relative;
      width: 100%;
      max-width: {{ section.settings.blob_max_width_mobile }}px;
      height: {{ section.settings.blob_height_mobile }}px;
      margin: 0 auto;
    }

    @media screen and (min-width: 750px) {
